<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发车"
        android:textColor="#606266"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/qb_px_3"
        android:src="@drawable/ic_up_press_un"
        app:layout_constraintBottom_toTopOf="@id/iv_down"
        app:layout_constraintLeft_toRightOf="@id/tv_start"
        app:layout_constraintTop_toTopOf="@id/tv_start" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="@dimen/qb_px_3"
        android:src="@drawable/ic_down_un_press"
        app:layout_constraintBottom_toBottomOf="@id/tv_start"
        app:layout_constraintLeft_toRightOf="@id/tv_start"
        app:layout_constraintTop_toBottomOf="@id/iv_up" />
</androidx.constraintlayout.widget.ConstraintLayout>