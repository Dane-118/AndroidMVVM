<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#F1F4F8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/qb_px_100" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_16"
        tools:text="出错啦～稍后再试试吧"
        android:textColor="#ff909399"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_retry"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_radius_22dp_checked"
        android:paddingLeft="@dimen/qb_px_20"
        android:paddingTop="@dimen/qb_px_6"
        android:paddingRight="@dimen/qb_px_20"
        android:paddingBottom="@dimen/qb_px_6"
        android:text="重新加载"
        android:textColor="#ffffffff"
        android:textSize="14sp" />
</LinearLayout>
