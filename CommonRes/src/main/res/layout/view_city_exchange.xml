<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/startCityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/changeRoot"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <View
                android:id="@+id/changeView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_home_switch"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/changeIconView"
                android:layout_width="@dimen/qb_px_40"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_switch" />
        </RelativeLayout>

        <View
            android:id="@+id/endCityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_start_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:text="出发地"
        android:textColor="#C0C4CC"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/startCityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_start_location_title"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="北京"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_destination_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="目的地"
        android:textColor="#C0C4CC"
        android:textSize="12sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/endCityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_destination_location_title"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="上海"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>